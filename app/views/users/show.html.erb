<section class="curent-user container">
    <div class="form-group col-md-10"> 
        <br><h2>My account:</h2>
        <% if @user.card_token == nil %>
            <p class="text-danger"> <%= link_to 'Update', edit_user_path(@user.id), :class => "btn btn-danger" %> Payment information is missind. Please update your account, so you can receice your money </p>    
        <% else %>
            <%= link_to 'Update my account', edit_user_path(@user.id), :class => "btn btn-warning" %>   
        <% end %> <br>
        <p>Name: <%= @user.name %></p>
        <p>Email: <%= @user.email %></p>
        <%= link_to 'My loans', loans_path, :class => "btn btn-light" %><br>
        <%= link_to 'My money requests', money_requests_path, :class => "btn btn-light" %><br>
        <%= link_to 'All Requests', all_request_path, :class => "btn btn-light" %><br><br>

        <%= link_to 'Request money', new_money_request_path, :class => "btn btn-dark" %>
    </div>
</section>


