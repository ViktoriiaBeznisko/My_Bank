<section class="new-session container">
    <div class="form-group col-md-6"> 
        <h2>Nice to see you.</h2>
        <p>Sign in to access your account and customize your profile.</p>
        <p1><%= @error %></p1>
        <%= form_for @user, url: signin_path, method: :post do |f| %>  
            <%= f.text_field :name, :class => "form-control", placeholder: "Enter your name" %>
            <%= f.password_field :password, :class => "form-control", placeholder: "Enter your password" %><br>
            <%= f.submit "Login", :class => "btn btn-dark" %>        
        <% end %> 
        <br><p>Login with your social media account</p>
        <%= link_to(raw("<i class=\"fab fa-facebook-f\"></i> Facebook"), "/auth/facebook", {:class => "btn btn-lg btn-primary active"}) %> <br>
    </div>
</section>



