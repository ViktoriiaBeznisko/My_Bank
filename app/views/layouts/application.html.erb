    <%= stylesheet_link_tag 'application', 'fontawesome-all.css' %>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDuZY3py3zXtArat18Ng72V8IbbJwi4UvE&callback=init" type="text/javascript"></script>
    <script>
      function init() {
          var lal = {
              lat: 40.77663,
              lng: -73.97177
          };
          var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 1,
              center: lal
          });
          var marker = new google.maps.Marker({
              position: lal,
              map: map
          })
      }
  </script>
  </body>
</html>


